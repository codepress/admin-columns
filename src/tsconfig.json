{
    "include": [
        "js/**/*"
    ],
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/",
        "noImplicitAny": true,
        //"noUnusedLocals": true,
        "strictNullChecks": true,
        "module": "es6",
        "target": "es6",
        "downlevelIteration": true,
        "allowJs": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noEmit": false,
        "forceConsistentCasingInFileNames": true,
        "types": ["node", "svelte"],
        "paths": {
            "ACUi/*": [
                "ui/*"
            ]
        }
    }
}