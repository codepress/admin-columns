{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "isolatedModules": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/*", "dist/*"]
}